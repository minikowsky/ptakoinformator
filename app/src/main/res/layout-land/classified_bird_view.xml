<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="15dp"
        android:elevation="10dp"
        android:padding="10dp"
        android:layout_marginEnd="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ea303030"
            android:padding="15dp">
            <TextView
                android:id="@+id/txt_view_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="#F5F5F5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_view_bird"
                tools:text="dataaaaaa"
                android:textStyle="italic"/>

            <ImageView
                android:id="@+id/image_view_bird"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10dp"
        android:padding="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ea303030">
            <TextView
                android:id="@+id/txt_view_classification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Klasyfikacja:"
                android:textColor="#F5F5F5"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_view_first_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F5F5F5"
                app:layout_constraintEnd_toEndOf="@+id/txt_view_classification"
                app:layout_constraintStart_toStartOf="@id/txt_view_classification"
                app:layout_constraintTop_toBottomOf="@id/txt_view_classification"
                tools:text="aaaaaaaa" />

            <TextView
                android:id="@+id/txt_view_second_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F5F5F5"
                app:layout_constraintEnd_toEndOf="@+id/txt_view_classification"
                app:layout_constraintStart_toStartOf="@id/txt_view_classification"
                app:layout_constraintTop_toBottomOf="@id/txt_view_first_result"
                tools:text="aaaaaa" />

            <TextView
                android:id="@+id/txt_view_third_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F5F5F5"
                app:layout_constraintEnd_toEndOf="@+id/txt_view_classification"
                app:layout_constraintStart_toStartOf="@id/txt_view_classification"
                app:layout_constraintTop_toBottomOf="@id/txt_view_second_result"
                android:paddingBottom="15dp"
                tools:text="aaaaaaaa" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
