<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#696969"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <com.example.ptakoinformator.customview.ClassifiedBirdView
        android:id="@+id/classified_bird_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintVertical_bias="0.35"
        />

    <ImageButton
        android:id="@+id/button_take_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_baseline_add_a_photo_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#303030"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/button_settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_baseline_settings_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#303030"
        tools:ignore="SpeakableTextPresentCheck" />
    <Button
        android:id="@+id/button_upload_photo"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#303030"
        android:layout_marginBottom="10dp"
        android:text="@string/upload_photo"
        app:layout_constraintBottom_toTopOf="@id/button_show_reports"
        app:layout_constraintEnd_toEndOf="@id/button_show_reports"
        app:layout_constraintStart_toStartOf="@id/button_show_reports" />
    <Button
        android:id="@+id/button_show_reports"
        android:layout_height="wrap_content"
        android:layout_width="210dp"
        android:backgroundTint="#303030"
        app:layout_constraintVertical_bias="0.62"
        android:text="@string/show_reports"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/classified_bird_view" />


</androidx.constraintlayout.widget.ConstraintLayout>