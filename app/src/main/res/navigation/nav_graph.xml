<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.ptakoinformator.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_fragmentHome_to_fragmentReports"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_homeFragment_to_creditsFragment"
            app:destination="@id/creditsFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.ptakoinformator.fragments.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/history_fragment" />
    <fragment
        android:id="@+id/creditsFragment"
        android:name="com.example.ptakoinformator.fragments.CreditsFragment"
        android:label="credits_fragment"
        tools:layout="@layout/credits_fragment" />
</navigation>